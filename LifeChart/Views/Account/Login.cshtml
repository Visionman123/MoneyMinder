@{
    ViewData["Title"] = "Login";
}

@model LifeChart.Models.LoginModel;


<div class="login-form">
    <form asp-controller="Account" asp-action="Login" class="form" method="post">
        <label for="username-input" asp-for="Username">Username</label>
        <input type="text" id="username-input" asp-for="Username" required/>
        <label for="password-input" class="label" asp-for="Password">Password</label>
        <input type="text" id="password-input" asp-for="Password" required/>
        <button type="submit">Login</button>
        <p id="login-error">@ViewBag.LoginErrorMessage</p>
         <a id="register-account" asp-controller="Account" asp-action="Register">Don't have an account? Register</a>
    </form>
</div>


<style>
    #login-error {
        color: red
    }
</style>