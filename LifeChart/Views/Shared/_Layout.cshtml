@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer


<style>
	li {
		display: inline;
		margin-left: 30px;
		color: white;
	}

	#block:hover {
		cursor: not-allowed;
	}

	.hidden-text {
		display: none;
	}

	#block:hover .hidden-text {
		display: inline;
		color: red;
	}

	#block:hover #show-text {
		display: none;
	}

	nav {
		/* background-color: black; */
		background-color: midnightblue;
		border-bottom: 1px solid white;
		display: flex;
		flex-direction: row;
		padding: 0px 50px 0px 10px;
		font-family: "Outfit";
		font-weight: normal;
	}

	.nav-item-lang {
		font-weight: normal;
		important
	}

	.logo-author-wrapper {
		display: flex;
		flex-direction: row;
		gap: 30px;
	}

	.logo-space {
		display: flex;
		flex-direction: row;
		align-items: center;
		width: 30%;
	}

	.authors {
		color: white;
		width: 45%;
		/* margin-left: -170px; */
		/* margin-top: 12px; */
		font-size: 12px;
		min-width: 380px;
	}
	
	.authors p {
		margin: 0;
		padding: 0;
	}

	.navbar-collapse {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: end;
		width: 70%
	}

	.navbar-nav {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	a {
		color: white;
		text-decoration: none;
	}

	.container {
		align-items: center;
	}

	.dropbtn {
		background-color: white;
		/* color: black; */
		color: midnightblue;
		padding: 10px;
		font-size: 16px;
		border: none;
		border-radius: 20px;
		cursor: pointer;
	}

	.dropbtn span {
		padding-right: 10px;
	}

	.dropdown-content {
		display: none;
		position: absolute;
		background-color: #f9f9f9;
		width: 115px;
		box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
		z-index: 1;
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.dropdown-content li {
		padding: 8px 16px;
	}

	.dropdown-content li a {
		/* color: black; */
		color: midnightblue;
		text-decoration: none;
		display: block;
		padding-left: 5px;
	}


	.dropdown-content li a:hover {
		background-color: #ddd;
	}

	.dropdown-content li a span {
		padding-right: 10px;
	}

	.language-dropdown:hover .dropdown-content {
		display: block;
	}

	.language-dropdown:hover .dropbtn {
		background-color: #ff6347;
		color: white
	}

	.selected-language {
		background-color: lightgray; /* Light gray background for selected language */
		font-weight: bold;
		padding: 8px;
	}

	.nav-link-help {
		background-color: white;
		color: midnightblue;
		padding: 5px 10px 5px 10px;
		border: none;
		border-radius: 20px;
		cursor: pointer;
		transition: background-color 0.3s, color 0.3s, border-color 0.3s;
		font-size: 16px;
		font-weight: bold;
		width: 84px;
		height: 33px;
	}

	.nav-link-help:hover {
		color: #fff; /* White text on hover */
		background-color: #ff6347; /* Tomato color on hover */
		border-color: #ff6347; /* Tomato border on hover */
	}

	.nav-link-logout {
		background-color: white;
		/* color: black; */
		color: midnightblue;
		padding: 5px 10px 5px 10px;
		border-radius: 20px;
		font-size: large
	}

	.nav-link-logout:hover {
		background-color: #ff6347; /* Tomato color on hover */
		border-color: #ff6347; /* Tomato border on hover */
		color: #fff; /* White text on hover */
	}

	.selected-language {
		pointer-events: none;
		cursor: default;
	}

	.nav-link-lang:hover {
		color: red;
	}

	iframe {
		display: none;
	}

	/* Styling for the modal (pop-up) */
	.modal {
		display: none; /* Hidden by default */
		position: fixed; /* Stay in place */
		z-index: 1000; /* Sit on top */
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		overflow: auto; /* Enable scroll if needed */
		background-color: rgb(0,0,0); /* Fallback color */
		background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
		justify-content: center;
		align-items: center;
	}

	.modal-content {
		position: relative;
		background-color: #fefefe;
		margin: auto;
		padding: 20px;
		border: 1px solid #888;
		width: 60%;
		max-width: 700px;
		border-radius: 10px;
		text-align: center;
		opacity: 0;
		transform: scale(0.8);
		transition: opacity 0.3s ease, transform 0.3s ease;
		position: absolute;
		cursor: move;
	}

	#modalContent > h1, h2, h3, h4, span {
		-webkit-user-select: none; /* Safari */
		-ms-user-select: none; /* IE 10 and IE 11 */
		user-select: none; /* Standard syntax */
	}

	.modal.show .modal-content {
		opacity: 1;
		transform: scale(1);
	}


	.modal-content img {
		width: 100%;
		height: auto;
	}

	.image-container {
		position: relative;
		display: inline-block;
	}

	#intro > p, img {
		-webkit-user-select: none; /* Safari */
		-ms-user-select: none; /* IE 10 and IE 11 */
		user-select: none; /* Standard syntax */
	}

	#prev-btn, #next-btn {
		background-color: cornflowerblue;
		color: #fff;
		border: none;
		padding: 10px;
		font-size: 16px;
		font-weight: bold;
		border-radius: 5px;
		cursor: pointer;
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
	}


	#prev-btn {
		left: -85px; /* Position to the left of the image */
	}

	#next-btn {
		right: -90px; /* Position to the right of the image */
	}

	.close {
		color: #aaa;
		float: right;
		font-size: 28px;
		font-weight: bold;
	}

	.close:hover,
	.close:focus {
		color: black;
		text-decoration: none;
		cursor: pointer;
	}

	.nav-buttons {
		margin-top: 10px;
	}

	.nav-buttons button {
		margin: 5px;
	}

	.navbar-brand {
		pointer-events: none;
	}
</style>



<!DOCTYPE html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - LifeChart</title>
	<link rel="icon" type="image/x-icon" href="/Assets/logo.png">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/LifeChart.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Outfit">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.0.0/css/flag-icons.min.css" />
</head>
<body>
	<header>
		<iframe src="../Home/Portfolio" id="externalFrame"> </iframe>
		<nav class="nav">
			<div class="logo-author-wrapper">
				<div class="logo-space">
					<img src="/Assets/logo.png" alt="logo" width="40" height="40" style="position:relative">
					<a class="navbar-brand" asp-area="" asp-page="" style="text-decoration:none">MoneyMinder</a>
				</div>
				<div class="authors">
					<p>Dung H. Dinh*, Nam H. Nguyen**, Tri N. M. Nguyen**, Ngoc H. Tran**</p>
					<p>* Business Information Systems, Vietnamese-German University, Vietnam</p>
					<p>** Computer Science, Vietnamese-German University, Vietnam</p>
				</div>
			</div>
			<div class="navbar-collapse">
				<ul class="navbar-nav">
					<div class="language-dropdown">
						<button class="dropbtn" id="langbtn">@Localizer["SelectLanguage"]</button>
						<ul id="dropdown-lang" class="dropdown-content">
							<li class="nav-item-lang">
								<a class="nav-link-lang" id="nav-en" href="?culture=en-US">
									<span class="fi fi-gb"></span> English
								</a>
							</li>
							<li class="nav-item-lang">
								<a class="nav-link-lang" id="nav-de" href="?culture=de-DE">
									<span class="fi fi-de"></span> Deutsch
								</a>
							</li>
						</ul>
					</div>
