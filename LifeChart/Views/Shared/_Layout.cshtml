		@RenderBody()

		<div id="myModal" class="modal">
			<div id="modalContent" class="modal-content">
				<span id="closeModal" class="close">&times;</span>
				<h1 class="help-about-main">MoneyMinder</h1>
				<div class="image-container">
					<button id="prev-btn">←</button>
