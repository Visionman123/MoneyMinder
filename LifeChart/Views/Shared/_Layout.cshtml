						<button class="nav-link-help" id="openModalBtn">@Localizer["ButtonHelp"]</button>
					</li>
					<li class="nav-item-logout">
						<a class="nav-link-logout" asp-area="" asp-controller="Account" asp-action="Logout">@Localizer["ButtonLogOut"]</a>
					</li>

				</ul>

			</div>

		</nav>
